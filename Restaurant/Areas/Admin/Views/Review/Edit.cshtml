@model Restaurant.ViewModels.ReviewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <h1>Edit Review</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Review">Index</a></li>
            <li class="breadcrumb-item active">Reviews Edir</li>
        </ol>
    </nav>
</div>

<hr />


<section class="section">
    <div class="row justify-content-center">
        <div class="card col-md-12">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="ReviewId" class="form-control" type="hidden" value="0" />
                    <input asp-for="CreateUser" class="form-control" type="hidden" />
                    <input asp-for="CreateDate" class="form-control" type="hidden" />
                    <input asp-for="IsActive" class="form-control" type="hidden" />
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="ReviewTitle" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="ReviewTitle" class="form-control" required />
                                    <span asp-validation-for="ReviewTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="ReviewDesc" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="ReviewDesc" class="form-control" required />
                                    <span asp-validation-for="ReviewDesc" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="File" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="File" class="form-control" />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                    <input asp-for="ReviewImage" class="form-control" hidden/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-end">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
