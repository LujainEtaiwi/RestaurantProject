@model Restaurant.ViewModels.HomeModel
@{
    ViewData["Title"] = "ContactUs";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/breath.jpg);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Contact us</h3>
            <ul>
                <li>
                    <a asp-action="Index">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-message-wrapper">
                    <h4 class="contact-title mb-25">Leave Us a Message</h4>
                    <div class="contact-message">
                        <form asp-action="ContactTable" >
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="TransactionContactUs.TransactionContactUsId" value="0" hidden>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsFullName"  placeholder="Full Name">
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsFullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsEmail"  placeholder="Email Address" type="email">
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsSubject"  placeholder="Subject" >
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsSubject" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style">
                                        <textarea asp-for="TransactionContactUs.TransactionContactUsMessage"  placeholder="Message"></textarea>
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsMessage" class="text-danger"></span>
                                        <button class="submit btn-style" type="submit">SEND MESSAGE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info-area">
                    <h4 class="contact-title mb-18">Contact Us</h4>
                    <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                    <div class="contact-info-wrap">

                        @foreach (var item in Model.ListMasterContactUsInformation)
                        {
                            if (item.MasterContactUsInformationRedirect == "Contact Us")
                            {
                                <div class="single-contact-info mb-40">
                                    <div class="contact-info-icon">
                                        @Html.Raw(item.MasterContactUsInformationImageUrl)
                                    </div>
                                    <div class="contact-info-content">
                                        <h4>Location :</h4>
                                        @Html.Raw(item.MasterContactUsInformationIdesc)
                                    </div>
                                </div>
                            }
                            
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="map-area pt-100">
            <div id="googleMap">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2565514.8139702505!2d15.528364891214732!3d51.10134611964492!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479a721ec2b1be6b%3A0x75e85d6b8e91e55b!2z2KPZhNmF2KfZhtmK2Kc!5e0!3m2!1sar!2sjo!4v1703182435417!5m2!1sar!2sjo" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>
<div class="pt-50"></div>

