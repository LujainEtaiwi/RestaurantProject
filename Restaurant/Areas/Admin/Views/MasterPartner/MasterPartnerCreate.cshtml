@model Restaurant.ViewModels.MasterPartnerModels

@{
    ViewData["Title"] = "MasterPartnerCreate";
}

<div class="pagetitle">
    <h1>Create Partner</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="MasterPartnerIndex" asp-controller="MasterPartner">Index</a></li>
            <li class="breadcrumb-item active">Partner Create</li>
        </ol>
    </nav>
</div>


<hr />


<section class="section">
    <div class="row justify-content-center">
        <div class="card col-md-12">
            <div class="card-body">
                <h5 class="card-title"></h5>

                <form asp-action="MasterPartnerCreate" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="MasterPartnerId" class="form-control" type="hidden" value="0" />

                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="MasterPartnerName" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterPartnerName" class="form-control" required />
                                    <span asp-validation-for="MasterPartnerName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="MasterPartnerWebsiteUrl" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterPartnerWebsiteUrl" class="form-control" required />
                                    <span asp-validation-for="MasterPartnerWebsiteUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row mb-3">
                                <label asp-for="File" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="File" class="form-control" required />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-end">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="MasterPartnerIndex" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

