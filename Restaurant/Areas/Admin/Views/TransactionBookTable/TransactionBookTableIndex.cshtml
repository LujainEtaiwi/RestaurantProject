@model IEnumerable<Restaurant.Models.TransactionBookTable>

@{
    ViewData["Title"] = "TransactionBookTableIndex";
}

<div class="pagetitle">
    <h1>Transaction Book Table</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Transaction Book</li>
        </ol>
    </nav>
</div>

<hr />

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table datatable table-striped">
                        <thead>
                            <tr >
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionBookTableFullName)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.TransactionBookTableEmail)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.TransactionBookTableMobileNumber)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.TransactionBookTableDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody >
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td >
                                        @Html.DisplayFor(modelItem => item.TransactionBookTableFullName)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.TransactionBookTableEmail)
                                    </td>
                                    <td class="align-middle w-25">
                                        @Html.DisplayFor(modelItem => item.TransactionBookTableMobileNumber)
                                    </td>
                                    <td class="align-middle w-25">
                                        @Html.DisplayFor(modelItem => item.TransactionBookTableDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

