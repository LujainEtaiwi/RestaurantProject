@model Restaurant.ViewModels.HomeModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>
</head>
<body>
    <header class="header-area transparent-bar header-position">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                    <div class="logo">
                        <a href="index.html">
                            <img class="logo-normal" alt="" src="~/images/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                            <img class="logo-sticky" alt="" src="~/images/@Model.SystemSetting.SystemSettingLogoImageUrl">
                        </a>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                    <div class="menu-search-bundle">
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    @foreach (var item in Model.ListMasterMenu)
                                    {
                                        <li><a href="@item.MasterMenuUrl">@item.MasterMenuName</a></li>
                                    }
                                </ul>
                            </nav>
                        </div>
                        <div class="search-wrap">
                            <button class="search-toggle">
                                <i class="fa fa-search"></i>
                            </button>
                            <div class="search">
                                <form action="#">
                                    <input type="search" placeholder="Search here">
                                    <button type="submit">
                                        Search
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mobile-menu-area d-md-block d-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                    <div class="mobile-menu">
                        <nav id="mobile-menu-active">
                            <ul class="menu-overflow">
                                @foreach (var item in Model.ListMasterMenu)
                                {
                                    <li>
                                        <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <div>
        @RenderBody()
    </div>


    <footer class="footer-area">
        <div class="footer-area-top black-bg pt-95 pb-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>About Us</h4>
                            </div>
                            <div class="footer-about">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>
                                <div class="footer-map">
                                    <a asp-action="ContactUs"><i class="ion-ios-location-outline"></i> View on map</a>
                                </div>
                            </div>
                            <div class="social-icon">
                                <ul>
                                    @foreach (var item in Model.ListMasterSocialMedium)
                                    {
                                        <li><a class="@item.MasterSocialMediumImageUrl" href="#">@Html.Raw(@item.MasterSocialMediumUrl)</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>contact Us</h4>
                            </div>
                            <div class="footer-cont-info">
                                @foreach (var item in Model.ListMasterContactUsInformation)
                                {
                                    if (item.MasterContactUsInformationRedirect == "Footer")
                                    {
                                        <div class="single-footer-cont-info">
                                            <div class="cont-info-icon">
                                                @Html.Raw(@item.MasterContactUsInformationImageUrl)
                                            </div>
                                            <div class="cont-info-content">
                                                @Html.Raw(@item.MasterContactUsInformationIdesc)
                                            </div>
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Opening Time</h4>
                            </div>
                            <div class="open-time pr-30">
                                <ul>
                                    @foreach (var item in Model.ListMasterWorkingHours)
                                    {
                                        <li>
                                            @item.MasterWorkingHoursIdName
                                            <span>@item.MasterWorkingHoursIdTimeFormTo</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Newsletter</h4>
                            </div>
                            <div class="newsletter-style">
                                <p>Enter Your Email For All News</p>
                                <div id="mc_embed_signup" class="subscribe-form ">
                                    <form asp-action="NewsTable">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="TransactionNewsletter.TransactionNewsletterId" value="0" hidden>
                                        <div class="reserve-form-top">
                                            <input asp-for="TransactionNewsletter.TransactionNewsletterEmail" placeholder="Mobile number">
                                            <span asp-validation-for="TransactionNewsletter.TransactionNewsletterEmail" class="text-danger"></span>
                                        </div>
                                        <div class="clear">
                                            <input id="mc-embedded-subscribe" class="button" type="submit" name="subscribe" value="Subscribe">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom black-bg-2 pb-25 pt-25">
            <div class="container">
                <div class="copyright text-center">
                    @Html.Raw(Model.SystemSetting.SystemSettingCopyright)
                </div>
            </div>
        </div>
    </footer>


    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/ajax-mail.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
