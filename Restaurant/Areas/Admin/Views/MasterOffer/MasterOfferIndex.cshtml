@model IEnumerable<Restaurant.Models.MasterOffer>

@{
    ViewData["Title"] = "MasterOfferIndex";
}


<div class="pagetitle">
    <h1>Offer Table</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Offer</li>
        </ol>
    </nav>
</div>


<hr />


<div class="text-end">
    <p>
        <a asp-action="MasterOfferCreate" class="btn btn-outline-success"><span>+</span> Create Offer</a>
    </p>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table datatable index-table text-break">
                        <thead>
                            <tr >
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterOfferTitle)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.MasterOfferBreef)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.MasterOfferDesc)
                                </th>
                                <th class="w-25">
                                    @Html.DisplayNameFor(model => model.MasterOfferImageUrl)
                                </th>
                                <th class="text-center">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody >
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.MasterOfferTitle)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.MasterOfferBreef)
                                    </td>
                                    <td class="align-middle w-25">
                                        @Html.DisplayFor(modelItem => item.MasterOfferDesc)
                                    </td>
                                    <td class="align-middle w-25">
                                        <img src="~/Images/@item.MasterOfferImageUrl" style="max-width:50px" alt="" />
                                    </td>
                                    <td class="align-middle text-center">
                                        <a asp-action="MasterOfferEdit" asp-route-id="@item.MasterOfferId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>|
                                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal" class="csBtnDelete"
                                           data-path="@Url.ActionLink("MasterOfferIndex", "MasterOffer", new { idDelete = item.MasterOfferId })">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>|
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterOfferId">
                                                <i class="ri-eye-fill text-success h5"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterOfferId">
                                                <i class="ri-eye-close-fill text-danger h5"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure for delete this item ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnCansel" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        var dataPath = "";
        $(".csBtnDelete").click(function () {
            dataPath = $(this).data("path");

        });
        $("#btnConfirmDelete").click(function () {
            window.location = dataPath;
            dataPath = "";

        });

        $("#btnCansel").click(function () {
            dataPath = "";
        });

    })
</script>